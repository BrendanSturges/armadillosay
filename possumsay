#!/bin/bash
input=$@

function print_dashes() {
  len=$(expr $(echo "$1" | wc -c) + 4 )
  i=0
  while [ $i -lt $len ]; do
    printf "-"
    let i++
  done
  echo
}

echo "< $input >"
print_dashes "$input"
cat <<EOF
    \        @@       )@.@)/%@//@)/@@///////#@@/
      \      @@@  *#//////////////////////////////@@                          
             )@@//**@/@//@///@@@@@///////////)//@////@                        
          ˎ@           )    @@@@///////////////@///////@                      
         @                     ////////////////////@/&)/@                     
        @                      @@////////////////////////@                    
       @ˎ*       @@            @&/////%//////////)////////%@                  
      @.                       //////////////////&)/////#/@/@@@@@             
    %@                 ˎ@@.   .&//////////////////@//)///%.    .@@@@@*        
   @& ..         @@@@@@@@@    //////////)/////&//@.@/&&@&.           %@@      
   @ @@@ˎ /@@  V       /@   #/////////////////&@   @@@@@               %@@    
    .ˎ.     @         @@   @ @#//////@@@@%.        @@@@                   %@@@
           %      \/@ %@@@@)  )@/@@@                                          
           #   \/@@.     .    )@@@@                                           
            %@%                  @                                                 
EOF
